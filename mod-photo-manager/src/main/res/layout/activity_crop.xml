<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <cc.sachsen.albumNew.view.CropLayout
        android:id="@+id/view_crop_edit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/crop_bg_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_crop_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/crop_bg_color"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/camera_cancel"
            android:textAlignment="center"
            android:textColor="@color/crop_text_color"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_crop_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/crop_bg_color"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/camera_finish"
            android:textAlignment="center"
            android:textColor="@color/crop_text_color"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>
</LinearLayout>